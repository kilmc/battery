{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/types",
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "target": "es5",
    "downlevelIteration": true
  },
  "include": ["src/**/*", "test/**/*", "src/fixtures/**/*"],
  "exclude": ["node_modules"]
}
